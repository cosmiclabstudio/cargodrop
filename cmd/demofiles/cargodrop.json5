{
  // Name of the service. Shown at the bottom left of the updater window.
  "name": "Modpack Name",

  // Welcome message shown when the updater starts.
  "welcome_message": "Welcome to my Minecraft Modpack!",

  // Goodbye message shown after update completes.
  "goodbye_message": "Please enjoy yourself at home!",

  // Folders to scan for missing resources.
  "folders": [
    "config/paxi",
    "mods"
  ],

  // URL where the updater fetches updates and the resource list (resources.json) from.
  "update_server": "https://yourmodpackserver.com/updates/"
}